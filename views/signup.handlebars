<div class='container text-center'>
  <div class='col-md-12'>
    <h2>Signup</h2>

    <form class='form signup-form'>
      <div class='form-group'>
        <label for='name-signup'>Username:</label>
        <input class='form-input' type='text' id='username-signup' />
      </div>
      <div class='form-group'>
        <label class="m-3" for='email-signup'>Email:</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>Password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary my-3' type='submit'>Signup</button>
      </div>
    </form>
  </div>
</div>

<script src='./js/signup.js'></script>