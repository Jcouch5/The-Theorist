
<div class="container text-center">
<h3>Login</h3>

<form class='form login-form' id="login-form">
  <div class='form-group'>
    <label class="m-3" for='email-login'>Email:</label>
    <input class='form-input' id='email-login' type='text' />
  </div>
  <div class='form-group'>
    <label for='password-login'>Password: </label>
    <input class='form-input' id='password-login' type='password' />
  </div>
  <div class='form-button'>
    <button class='btn btn-primary my-3' type='submit'>Login</button>
  </div>
</form>
<a href='/signup'>Sign Up Instead</a>

<script src='./js/login.js'></script>
